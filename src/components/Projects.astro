---
import AngularIcon from '../components/icons/Angular.astro'
import ReactIcon from '../components/icons/React.astro'
import LinkIcon from '../components/icons/Link.astro'
import GitIcon from '../components/icons/Git.astro'
const PROJECTS = [
    {
        title: 'Epeak',
        description: 'Este projecto lo realice con un asociado desde cero, se trata de una plataforma que permite llevar del control de las tareas de los estudiantes, realizar examenes ademas incluye un simulador del SAT para permitir practicas por parte de los estudiantes.',
        image: '/projects/epeak.webp',
        link: 'https://www.epeak.mx',
        github: '',
        tags: ['Angular', 'Material UI', 'TypeScript', 'NodeJs', 'NestJs', 'GitLab', 'MongoDB'],
    },
    {
        title: 'Codes Fortress',
        description: 'Pagina Web contruida en React y backend con NestJs que permite registrar preguntas de entrevista, para despues poder estudiar.',
        image: '/projects/codesfortress.webp',
        link: 'https://codesfortress.com/',
        github: '',
        tags: ['React', 'Tailwind', 'TypeScript', 'NodeJs', 'NestJs', 'GitLab', 'MongoDB'],
    }
]
---
<div class="flex flex-col">
    {
        PROJECTS.map(({ title, description, image, link, github, tags }) => {
            return (
                <article class="flex flex-row w-full rounded-lg mb-4">
                    <img class="mr-3 rounded-md flex h-full" src={image} alt={title} />
                    <div class="flex flex-col justify-between">
                        <div class="">
                            <h3 class="text-lg font-bold tracking-tight py-1 pt-0 opacity-70 text-black-900/90">{title}</h5>
                            <p class="text-sm opacity-80 text-wrap pt-2 pb-1">{description}</p>
                            <div class="flex flex-wrap gap-x-1 gap-y-1 py-2">
                                {
                                    tags.map(tag => {
                                        return (
                                        <div class="flex items-center rounded-full bg-purple-500/10 px-3 py-1 text-xs leading-5 text-purple-400 ">{tag}</div>
                                        )
                                    })
                                }
                            </div>
                        </div>
                        <div class="flex flex-row justify-around">
                            {
                                link && (
                                <a href={link} class="flex items-center font-medium text-md text-purple-600 dark:text-blue-500 hover:underline"  aria-label="Enlace hacia la pagina del proyecto">Enlace</a>)
                            }
                            {
                                link && (
                                <a href={github} class="flex items-center font-medium text-md text-purple-600 dark:text-blue-500 hover:underline"  aria-label="Enlace hacia el repositorio del proyecto">Repositorio</a>)
                            }
                        </div>
                    </div>
                </article>
            )
        })
    }
</div>